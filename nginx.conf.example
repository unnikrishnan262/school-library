# Nginx configuration for School Library Management System
# Copy this file to /etc/nginx/sites-available/school-library
# Then symlink to /etc/nginx/sites-enabled/
# sudo ln -s /etc/nginx/sites-available/school-library /etc/nginx/sites-enabled/
# sudo nginx -t
# sudo systemctl reload nginx

upstream school_library {
    server 127.0.0.1:3000;
    keepalive 64;
}

server {
    listen 80;
    server_name your-server-name-or-ip;  # Change this to your domain or IP

    # Redirect HTTP to HTTPS (uncomment if using SSL)
    # return 301 https://$server_name$request_uri;

    # Access and error logs
    access_log /var/log/nginx/school-library-access.log;
    error_log /var/log/nginx/school-library-error.log;

    # Client body size (for file uploads)
    client_max_body_size 10M;

    location / {
        proxy_pass http://school_library;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 60s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
    }

    # Next.js static files
    location /_next/static/ {
        proxy_pass http://school_library;
        proxy_cache_valid 200 60m;
        expires 1y;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Favicon and robots.txt
    location = /favicon.ico {
        proxy_pass http://school_library;
        access_log off;
        expires 1y;
    }

    location = /robots.txt {
        proxy_pass http://school_library;
        access_log off;
    }
}

